<Window x:Class="text_redactor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:text_redactor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Height="319" VerticalAlignment="Bottom">

        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" HorizontalAlignment="Left" Height="53" VerticalAlignment="Top" Width="765" Margin="21,-95,0,0">
            <Button Name="Copy" Content="Copy" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="CopyClick" Height="43"/>
            <Button Name="Paste" Content="Paste"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="PasteClick" Height="43"/>
            <Button Name="Cut" Content="Cut" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="CutClick" Height="43"/>
        </Menu>
        <TextBox Name="Text" HorizontalAlignment="Left" Height="346" TextWrapping="Wrap"  VerticalAlignment="Top" Width="772" Margin="10,-37,0,0" RenderTransformOrigin="0.525,0.314" Grid.RowSpan="2"/>

    </Grid>
</Window>
